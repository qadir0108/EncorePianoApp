<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:orientation="horizontal"
    android:id="@+id/consignmentBg" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgCompleted"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="0dp"
            android:src="@drawable/icons8_truck_64" />

        <TextView
            android:id="@+id/tvPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@drawable/rowitem_textcolor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvConsigmentNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@drawable/rowitem_textcolor" />

        <TextView
            android:id="@+id/tvPickupAddress1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pickup:"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <TextView
            android:id="@+id/tvPickupAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@drawable/rowitem_textcolor" />

        <TextView
            android:id="@+id/tvDeliveryAddress1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery:"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <TextView
            android:id="@+id/tvOrderType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@drawable/rowitem_textcolor" />

        <TextView
            android:id="@+id/tvConsignmentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>